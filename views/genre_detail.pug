extends layout

block content
  h1 Genre: #{genre.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
      each book in genre_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p This genre has no books

  div(style='margin-top:20px')
    a.btn.btn-danger(href=`/catalog/genre/${genre._id}/delete`) Delete Genre

    a.btn.btn-primary(href=`/catalog/genre/${genre._id}/update`) Update Genre
